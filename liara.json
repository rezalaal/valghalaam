{
    "platform": "laravel",
    "app": "valghalam",
    "laravel": {
        "phpVersion": "8.3",
        "buildAssets": false,
        "configCache": true,
        "timezone": "Asia/Tehran"
    },
    "port": 80,
    "disks": [
        {
            "name": "storage",
            "mountTo": "storage"
        }
    ],
    "cron": [
        "* * * * * cd /var/www/html && php artisan schedule:run >> /dev/null 2>&1"
    ]
}